<?xml version="1.0"?>
<ruleset name="WordPress Plugin Standards">
    <description>WordPress Coding Standards for this plugin</description>

    <!-- Scan all PHP files in current directory -->
    <file>.</file>

    <!-- Exclude directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Use WordPress-Core which has fewer PEAR dependencies -->
    <rule ref="WordPress-Core">
        <!-- Exclude ALL PEAR.Functions rules -->
        <exclude name="PEAR.Functions"/>
    </rule>
    
    <!-- Add WordPress-Docs if you want documentation standards -->
    <rule ref="WordPress-Docs"/>
    
    <!-- Add WordPress-Extra for additional WordPress-specific rules -->
    <rule ref="WordPress-Extra">
        <!-- Exclude any PEAR rules that might come through WordPress-Extra -->
        <exclude name="PEAR.Functions"/>
    </rule>

    <!-- Explicitly exclude specific PEAR rules that might still come through -->
    <rule ref="PEAR.Functions.FunctionCallSignature">
        <exclude-pattern>*</exclude-pattern>
    </rule>
</ruleset>